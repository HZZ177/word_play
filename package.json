{
  "name": "learning-toolbox",
  "version": "1.0.0",
  "description": "学习工具箱 - 一个多功能的学习工具集合",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set \"NODE_ENV=development\" && electron .",
    "dev:tools": "set \"NODE_ENV=development\" && set \"OPEN_DEV_TOOLS=true\" && electron .",
    "dev:watch": "nodemon --exec electron . --watch ./ --ext .js,.html,.css,.json",
    "build": "electron-builder --publish always",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "education",
    "vocabulary",
    "learning"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.4.0",
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "electron": "^28.3.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.learningtoolbox.app",
    "productName": "学习工具箱",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "HZZ177",
        "repo": "word_play"
      }
    ]
  }
}
